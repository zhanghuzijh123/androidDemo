<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:paddingTop="10dp"
    android:paddingLeft="15dp"
    android:paddingBottom="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/shoppingIcon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/shoppingName"
        app:layout_constraintBottom_toTopOf="@id/shoppingChoose"
        android:src="@drawable/button1"
        android:layout_width="30dp"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/shoppingName"
        android:text="自营"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/shoppingIcon"
        app:layout_constraintRight_toLeftOf="@id/shoppingRight"
        app:layout_constraintBottom_toTopOf="@id/shoppingChoose"
        android:layout_marginLeft="15dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/shoppingRight"
        android:text="以免运费"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/shoppingName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/shoppingContext"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <CheckBox
        android:id="@+id/shoppingChoose"
        app:layout_constraintTop_toBottomOf="@id/shoppingIcon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/shoppingContext"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp"
        android:layout_width="70dp"
        android:layout_height="120dp" />

    <TextView
        android:id="@+id/shoppingContext"
        app:layout_constraintTop_toBottomOf="@id/shoppingName"
        app:layout_constraintLeft_toRightOf="@id/shoppingChoose"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/textColor_1"
        android:layout_marginTop="10dp"
        android:layout_width="0dp"
        android:layout_height="120dp" />
</androidx.constraintlayout.widget.ConstraintLayout>