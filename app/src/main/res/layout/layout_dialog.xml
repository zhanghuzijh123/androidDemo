<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <!--<View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/shape_mydialog_bar"/>-->
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/shape_common_dialog_bar">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:text="温馨提示"
            android:textSize="15sp"
            android:textColor="@color/txt_black"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/main_background_gray"/>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp">
            <TextView
                android:id="@+id/tv_msg_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="本次更新内容："
                android:textSize="15sp"
                android:textColor="@color/txt_black"
                android:layout_marginBottom="5dp"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tv_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:text="确定要提交吗？"
                android:textSize="15sp"
                android:textColor="@color/txt_black"/>

        </LinearLayout>
        <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="35dp"
            android:gravity="left|center_vertical"
            android:hint="请输入户头"
            android:textSize="14sp"
            android:minHeight="50dp"
            android:inputType="textMultiLine"
            android:paddingBottom="1dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingTop="1dp"
            android:visibility="gone" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/main_background_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/rl_negative"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:background="@drawable/selector_negative"
                android:text="暂不更新"
                android:textSize="15sp"
                android:textColor="@color/txt_y_color"/>
        </RelativeLayout>
        <View
            android:id="@+id/v_neutral_left"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/main_background_gray"
            android:visibility="gone"/>
         <RelativeLayout
            android:id="@+id/rl_neutral"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
             android:visibility="gone">
            <TextView
                android:id="@+id/tv_draft"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:background="@drawable/selector_negative"
                android:text="存为草稿"
                android:textSize="15sp"
                android:textColor="@color/main_text_color_deep_gray"/>
        </RelativeLayout>
        <View
            android:id="@+id/v_neutral_right"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/main_background_gray"/>
         <RelativeLayout
            android:id="@+id/rl_positive"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_commit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:background="@drawable/selector_positive"
                android:text="更新"
                android:textSize="15sp"
                android:textColor="@color/txt_y_color"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
